---
export interface Props {
  svg: string;
  title: string;
  description: string;
}
const { svg, title, description } = Astro.props;
---

<div class="bg-white shadow-md rounded-lg p-4">
  <div class="h-12 w-12 mx-auto" set:html={svg} />
  <h3 class="font-semibold text-lg text-slate-800 mt-4">
    {title}
  </h3>
  <p class="text-gray-600">
    {description}
  </p>
</div>

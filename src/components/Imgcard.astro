---
export interface Props {
  img: string;
  title: string;
  description: string;
  href: string;
  loading: "lazy" | "eager";
}
const { img, title, description, href, loading } = Astro.props;
---
<div class="max-w-sm m-7 bg-white border border-gray-200 rounded-lg shadow">
  <img
    class="rounded-t-lg w-full h-48 object-cover"
    src={img}
    alt="CardImg"
    width={640}
    height={360}
    loading={loading}
  />
  <div class="p-5">
    <h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900">
      {title}
    </h5>
    <p class="mb-3 font-normal text-gray-700">
      {description}
    </p>
    <a
      href={href}
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-yellow-400 rounded-lg hover:bg-yellow-500 focus:ring-1 focus:outline-none focus:ring-amber-700"
    >
      Ver m√°s
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</div>

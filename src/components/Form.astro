<section class="p-4 bg-gray-100">
  <div class="container mx-auto">
    <h2 class="text-3xl font-semibold text-center mb-6">Contáctanos</h2>
    <form class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md">
      <div class="mb-4">
        <label for="name" class="block text-gray-700 font-semibold"
          >Nombre</label
        >
        <input
          type="text"
          id="name"
          placeholder="¿Con quién tenemos el gusto?"
          class="w-full mt-2 p-3 border rounded-lg"
        />
      </div>
      <div class="mb-4">
        <label for="email" class="block text-gray-700 font-semibold"
          >Correo Electrónico</label
        >
        <input
          type="email"
          id="email"
          placeholder="¿Cómo podemos contactarte?"
          class="w-full mt-2 p-3 border rounded-lg"
        />
      </div>
      <div class="mb-4">
        <label for="message" class="block text-gray-700 font-semibold"
          >Mensaje</label
        >
        <textarea
          id="message"
          rows="4"
          placeholder="¿Qué nos quieres decir?"
          class="w-full mt-2 p-3 border rounded-lg"></textarea>
      </div>
      <button
        type="submit"
        class="bg-yellow-400 hover:bg-yellow-500 text-lg text-black hover:text-white py-3 px-6 rounded-lg shadow-md w-full"
      >
        Enviar
      </button>
    </form>
  </div>
</section>

<section class="container my-6 mx-auto">
    <h2
      class="text-3xl font-semibold text-center mb-6 sm:text-2xl md:text-4xl text-slate-900 tracking-tighter text-pretty pointer-events-none">
      Contáctanos
    </h2>
    <form
      class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md"
      action="https://formspree.io/f/manqwrde"
      method="POST">
      <div class="mb-4">
        <label for="name" class="block text-gray-700 font-semibold"
          >Nombre</label
        >
        <input
          type="text"
          id="name"
          name="name"
          placeholder="¿Con quién tenemos el gusto?"
          class="bg-slate-100 w-full mt-2 p-3 border rounded-lg"
        />
      </div>
      <div class="mb-4">
        <label for="email" class="block text-gray-700 font-semibold"
          >Correo Electrónico</label
        >
        <input
          type="email"
          id="email"
          name="email"
          placeholder="¿Cómo podemos contactarte?"
          class="bg-slate-100 w-full mt-2 p-3 border rounded-lg"
        />
      </div>
      <div class="mb-4">
        <label for="message" class="block text-gray-700 font-semibold"
          >Mensaje</label
        >
        <textarea
          id="message"
          rows="4"
          name="message"
          placeholder="¿Qué nos quieres decir?"
          class="bg-slate-100 w-full min-h-30 max-h-56 mt-2 p-3 border rounded-lg"
        ></textarea>
      </div>
      <button
        type="submit"
        class="bg-yellow-400 hover:bg-yellow-500 text-lg font-medium text-black hover:text-white py-3 px-6 rounded-lg shadow-md w-full cursor-pointer hover:scale-105 transition-transform duration-300">
        Enviar
      </button>
    </form>
</section>
